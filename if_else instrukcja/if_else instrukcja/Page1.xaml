<Page x:Class="if_else_instrukcja.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:if_else_instrukcja"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="#FF298C61">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="zmiana_tekstu" Content="Kliknięcie zmienia etykietę" HorizontalAlignment="Center" VerticalAlignment="Center" Click="zmiana_tekstu_Click"/>
        <CheckBox x:Name="checkBox" Grid.Column="1" Content="Włącz zmianę etykiety" HorizontalAlignment="Left" Margin="180,122,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="label_do_zmiany" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Naciśnij przycisk by zmienić tekst" VerticalAlignment="Center" Margin="0,2,0,0" Grid.ColumnSpan="2" FontSize="24"/>

    </Grid>
</Page>
